pipeline {

    agent any

    tools {nodejs "node"}

    stages {
        stage('Install dependencies') {
            steps {
                sh "npm install yarn -g"
		        sh "yarn install"
            }
        }
        stage('Build') {
            steps {
                sh "yarn build"
            }
        }
        stage('Test') {
            steps {
                sh "yarn test"
            }
        }
    }
    post {
        success {
            echo "Run market-project_deploy pipeline"
            build job: "market-project_deploy"
        }
    }
}